# Environment variables for Restaurant Assistant
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Deepgram Configuration (for Speech-to-Text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Cartesia Configuration (for Text-to-Speech)
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_VOICE_ID=your_preferred_voice_id_here

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=service.json

# LiveKit Configuration (if needed)
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret